{
  "Media Query": {
    "prefix": "!mq",
    "body": [
      "@media (min-width: ${props => props.theme.breakpoints.${1|sm,md,lg|}}) {",
      "\t$2",
      "}"
    ],
    "description": "Add a media query inside a Styled Component block"
  },
  "Theme - Colors": {
    "prefix": "!color",
    "body": [
      "${props => props.theme.colors.$1};"
    ],
    "description": "Use a color from the theme file"
  },
  "Theme - Font Size": {
    "prefix": "!size",
    "body": [
      "${props => props.theme.font.size.${1|xxs,xs,xm,md,lg,xl,xxl|}};"
    ],
    "description": "Use a font-size from the theme file"
  },
  "Theme - Font Weight": {
    "prefix": "!weight",
    "body": [
      "${props => props.theme.font.weight.${1|xxs,xs,xm,md,lg,xl,xxl|}};"
    ],
    "description": "Use a font-weight from the theme file"
  },
  "Conditional Line": {
    "prefix": "!conline",
    "body": [
      "$2: ${props => props.$1 && \"$3\"};"
    ],
    "description": "A conditional line of CSS"
  },
  "Conditional Block": {
    "prefix": "!conblock",
    "body": [
      "${props =>",
      "props.$1 &&",
      "css`",
      "\t$2",
      "`};"
    ],
    "description": "A conditional block of CSS"
  },
  "Switch": {
    "prefix": "!switch",
    "body": [
      "${props => $1(props)};"
    ],
    "description": "Call a switch from within a CSS block"
  },
}